{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/config": ["libs/config/src/index.ts"],
      "@project/config/config-uploader": [
        "libs/config/config-uploader/src/index.ts"
      ],
      "@project/config/config-users": ["libs/config/config-users/src/index.ts"],
      "@project/config/notify-config": [
        "libs/config/notify-config/src/index.ts"
      ],
      "@project/models/task-space-models": [
        "libs/models/task-space-models/src/index.ts"
      ],
      "@project/shared/app-types": ["libs/shared/app-types/src/index.ts"],
      "@project/shared/app-validation": [
        "libs/shared/app-validation/src/index.ts"
      ],
      "@project/shared/authentication": [
        "libs/shared/authentication/src/index.ts"
      ],
      "@project/shared/authentification": [
        "libs/shared/authentification/src/index.ts"
      ],
      "@project/shared/shared-pipes": ["libs/shared/shared-pipes/src/index.ts"],
      "@project/shared/validate-messages": [
        "libs/shared/validate-messages/src/index.ts"
      ],
      "@project/util/util-core": ["libs/util/util-core/src/index.ts"],
      "@project/util/util-types": ["libs/util/util-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
